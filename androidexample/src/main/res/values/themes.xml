<resources>
    <!-- Base application theme. -->
    <style name="Theme.PoEGo" parent="Theme.SplashScreen">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/golden_brown</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_background</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!-- Splash Screen Theme -->
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/poedex</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/black</item>
    </style>
</resources>